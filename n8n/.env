# n8n Database Configuration
N8N_DB_PASSWORD=secure_n8n_password

# n8n Authentication
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_admin_password

# n8n Encryption Key (used to encrypt credentials)
N8N_ENCRYPTION_KEY=a-random-string-for-encryption-32chars

# n8n External URL (for webhooks)
N8N_WEBHOOK_URL=http://n8n.raspiska.local

# OpenAI API Key (for AI workflows)
OPENAI_API_KEY=your-openai-api-key

# SMTP Configuration (for notification workflows)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=notifications@raspiska.local
