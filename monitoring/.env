# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# Redis/Valkey Passwords (should match the ones in their respective .env files)
REDIS_PASSWORD=secure_redis_password
VALKEY_PASSWORD=secure_valkey_password

# PostgreSQL Password (should match the one in Kong's .env file)
POSTGRES_PASSWORD=secure_postgres_password

# SMTP Configuration for Alertmanager
ALERTMANAGER_SMTP_HOST=smtp.example.com:587
